<%- include("../partials/head.ejs", { headTitle: `${name} | Edit editorial` })%>
<body>
	<%- include("../partials/header.ejs", { h1: `Edit ${name}'s data` } ) %>

	<main>
		<form action="/detail/<%= id %>/editorial/edit" method="post" autocomplete="off">
			<input type="hidden" name="id" value="<%= id %>">
			<%- include(
				'../partials/input.ejs', { 
					labelText: 'Name *', 
					name: 'name', 
					value: locals.name,
				})
			%>

			<%- include(
				'../partials/input.ejs', { 
					labelText: 'More info url', 
					name: 'url', 
					value: locals.url,
				})
			%>

			<button>Update</button>
		</form>
	</main>

	<%- include("../partials/footer.html") %>
</body>
</html>
