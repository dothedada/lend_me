<%- include("../partials/head.ejs", { headTitle: `${name} | edit author` })%>
<body>
	<%- include("../partials/header.ejs", { h1: `Edit ${name}'s data` } ) %>

	<main>
		<form action="/detail/<%= id %>/author/edit" method="post" autocomplete="off">
			<input type="hidden" name="id" value="<%= id %>">
			<label>Name
				<input type="text" name="name" value="<%= name %>">
			</label>
			<label>Bio
				<textarea name="bio"><%= bio %></textarea>
			</label>
			<label>
				<input type="text" name="url" value="<%= url %>">
			</label>
			<button>Update</button>
		</form>
	</main>

	<%- include("../partials/footer.html") %>
</body>
</html>
