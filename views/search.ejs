<%- include("partials/head.ejs", {headTitle: `${ search } | Search` })%>
<body>
	<%- include("partials/header.ejs") %>

	<main>
		<section>
			<h2>Search again</h2>
			<form action="/search" method="get">
				<label>
					look for...
					<input type="search" name="q" value="<%= search %>">
					<button>search</button>
				</label>
			</form>
		</section>

		<section>
			<h2>Results for "<%= search %>":</h2>
				<table>
					<tr>
						<th>Title</th>
						<th>Author</th>
						<th>year</th>
						<th>Category</th>
						<th>editorial</th>
						<th>Owned by</th>
						<th>Action</th>
					</tr>
					<% foundBooks.forEach((book) => { %>
					<tr>
						<td><a href="/detail/<%= book.id %>/book"><%= book.title %></a></td>
						<td><a href="/detail/<%= book.author_id %>/author"><%= book.author %></a></td>

						<td><%= book.year %></td>
						<td><%= book.category || "" %></td>

						<td><a href="/detail/<%= book.editorial_id %>/editorial"><%= book.editorial %></a></td>

						<td><%= book.owner %></td>

						<td>
							<% if (book.status === "active") { %>
								unavailable
							<% } else { %>
								<form action="/lends/<%= book.lend_id %>/" method="post">
									<button>Borrow</button>
								</form>
							<% } %>
						</td>
					</tr>
					<% }) %>
				</table>
		</section>

	<%- include("partials/footer.html") %>
</body>
</html>
